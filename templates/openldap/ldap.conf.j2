{% if baseline_os == "freebsd" %}
BASE        dc=sigaint,dc=au
URI         ldaps://ipa-1.syd.sigaint.au ldaps://ipa-2.syd.sigaint.au ldaps://ipa-3.syd.sigaint.au
SASL_MECH   GSSAPI
SASL_REALM  SIGAINT.AU
TLS_CACERT  /etc/ssl/certs/freeipa-ca.crt
{% endif %}

{% if baseline_os == "openbsd" %}
host=ldaps://ipa-1.syd.sigaint.au
cacert=/etc/ssl/cert.pem
scope=sub
basedn=dc=sigaint,dc=au
binddn={{ldap_default_bind_dn}}
bindpw={{ldap_default_authtok}}
filter=(uid=%u)
{% endif %}