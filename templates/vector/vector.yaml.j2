sources:
  journald:
    type: journald
    current_boot_only: true
    batch_size: 100

sinks:
  elasticsearch:
    type: elasticsearch
    inputs:
      - journald
    endpoints:
      - http://syslog.v4.ts.sigaint.au:9428/insert/elasticsearch/
    api_version: v8
    compression: gzip
    healthcheck:
      enabled: false
    query:
      _msg_field: message
      _time_field: timestamp
      _stream_fields: host,container_name